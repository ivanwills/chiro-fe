<div class="chiro-condition">
    <fieldset>
        <legend>Condition</legend>
        <input type="hidden" name="condition_id" value="{{data.condition_id}}" />
        {{#each fields}}
        <div>
            <label for="{{.field}}">{{.label}}</label>
            <input type="text" name="{{.field}}" value="{{data[.field]}}" />
        </div>
        {{/each}}
        <div>
            <button on-tap="save">Save</button>
        </div>
    </fieldset>
</div>
